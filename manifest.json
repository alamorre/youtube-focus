{
  "manifest_version": 2,
  "name": "YouTube Focus",
  "description": "Turn YouTube's distractions off and on as you wish!",
  "version": "0.0.0.3",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "YouTube Focus",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css": [],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "icons": {
    "128": "focus128.png",
    "48": "focus48.png",
    "16": "focus16.png"
  }
}
